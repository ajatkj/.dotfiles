# Check if xterm-256color terminfo file is present for mf cobol
_terminfo=$HOME/.cobterminfo
if [ -f ${_terminfo}/x/xterm-256color ]; then
   export COBTERMINFO=$HOME/.cobterminfo
   export TERM=xterm-256color
else
   export TERM=xterm
fi

export LINES=80

# Save breakpoints between animator sessions
_sessioninfo=$HOME/.cache/cob
mkdir -p ${_sessioninfo} 
export COBAIF=${_sessioninfo}
export COBAIFNAME=saved.breakpoints

